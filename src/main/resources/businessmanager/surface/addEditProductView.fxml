<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="628.0" prefWidth="870.0" spacing="20.0"
      style="-fx-background-color: linear-gradient(to bottom, #f8f9fa, #e9ecef);"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="businessmanager.surface.AddEditProductController">

    <padding>
        <Insets bottom="30" left="40" right="40" top="30" />
    </padding>

    <!-- Título dinámico -->
    <Label fx:id="labelAddEditProduct" text="Añadir Producto"
           style="-fx-font-size: 32px; -fx-font-weight: bold;
                  -fx-text-fill: #2c3e50;
                  -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 3, 0, 0, 1);">
        <padding>
            <Insets bottom="10" />
        </padding>
    </Label>

    <!-- Formulario en dos columnas -->
    <GridPane hgap="25" vgap="20" style="-fx-padding: 20;">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" prefWidth="150" />
            <ColumnConstraints prefWidth="300" />
            <ColumnConstraints halignment="RIGHT" prefWidth="150" />
            <ColumnConstraints prefWidth="300" />
        </columnConstraints>

        <!-- FILA 1: Código y Cantidad -->
        <Label text="Código:" GridPane.columnIndex="0" GridPane.rowIndex="0"
               style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
        <TextField fx:id="codeField" promptText="Ej.: 10023"
                   style="-fx-background-radius: 8; -fx-border-radius: 8;
                          -fx-border-color: #ced4da; -fx-padding: 10 15;
                          -fx-font-size: 14px;"
                   GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Cantidad:" GridPane.columnIndex="2" GridPane.rowIndex="0"
               style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
        <TextField fx:id="quantityField" promptText="Ej.: 50"
                   style="-fx-background-radius: 8; -fx-border-radius: 8;
                          -fx-border-color: #ced4da; -fx-padding: 10 15;
                          -fx-font-size: 14px;"
                   GridPane.columnIndex="3" GridPane.rowIndex="0" />

        <!-- FILA 2: Proveedor y IVA -->
        <Label text="Proveedor:" GridPane.columnIndex="0" GridPane.rowIndex="1"
               style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
        <ComboBox fx:id="supplierCombo"
                  promptText="Selecciona proveedor"
                  style="-fx-background-radius: 8; -fx-border-radius: 8;
                         -fx-border-color: #ced4da; -fx-padding: 10 15;
                         -fx-font-size: 14px;"
                  GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="IVA (%):" GridPane.columnIndex="2" GridPane.rowIndex="1"
               style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
        <TextField fx:id="ivaField" promptText="Ej.: 21"
                   style="-fx-background-radius: 8; -fx-border-radius: 8;
                          -fx-border-color: #ced4da; -fx-padding: 10 15;
                          -fx-font-size: 14px;"
                   GridPane.columnIndex="3" GridPane.rowIndex="1" />

        <!-- FILA 3: Precio Compra y Precio Venta -->
        <Label text="Precio de Compra:" GridPane.columnIndex="0" GridPane.rowIndex="2"
               style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
        <TextField fx:id="purchasePriceField" promptText="Ej.: 15.50"
                   style="-fx-background-radius: 8; -fx-border-radius: 8;
                          -fx-border-color: #ced4da; -fx-padding: 10 15;
                          -fx-font-size: 14px;"
                   GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Precio de Venta:" GridPane.columnIndex="2" GridPane.rowIndex="2"
               style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
        <TextField fx:id="sellingPriceField" promptText="Ej.: 22.90"
                   style="-fx-background-radius: 8; -fx-border-radius: 8;
                          -fx-border-color: #ced4da; -fx-padding: 10 15;
                          -fx-font-size: 14px;"
                   GridPane.columnIndex="3" GridPane.rowIndex="2" />

        <!-- FILA 4: Descripción -->
        <Label text="Descripción:" GridPane.columnIndex="0" GridPane.rowIndex="3"
               style="-fx-font-weight: bold; -fx-text-fill: #495057;" />

        <TextArea fx:id="descriptionField"
                  promptText="Descripción del producto"
                  prefHeight="100"
                  style="-fx-background-radius: 8; -fx-border-radius: 8;
                         -fx-border-color: #ced4da; -fx-padding: 10 15;
                         -fx-font-size: 14px;"
                  GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="3" />

        <rowConstraints>
            <RowConstraints prefHeight="50" />
            <RowConstraints prefHeight="50" />
            <RowConstraints prefHeight="50" />
            <RowConstraints prefHeight="120" />
        </rowConstraints>
    </GridPane>

    <!-- BOTONES -->
    <HBox alignment="CENTER" spacing="25" style="-fx-padding: 30 0 0 0;">
        <Button onAction="#buttonReturn"
                text="⬅ Regresar"
                style="-fx-background-color: #6c757d; -fx-text-fill: white;
                       -fx-font-size: 14px; -fx-font-weight: bold;
                       -fx-background-radius: 8; -fx-cursor: hand;
                       -fx-padding: 12 30;
                       -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 4, 0, 0, 2);" />

        <Button fx:id="buttonClean" onAction="#clean"
                text="Limpiar Formulario"
                style="-fx-background-color: #ffc107; -fx-text-fill: #212529;
                       -fx-font-size: 14px; -fx-font-weight: bold;
                       -fx-background-radius: 8; -fx-cursor: hand;
                       -fx-padding: 12 30;
                       -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 4, 0, 0, 2);" />

        <Button fx:id="buttonAddEditProduct" onAction="#buttonAddEditProduct"
                text="Guardar Producto"
                style="-fx-background-color: #28a745; -fx-text-fill: white;
                       -fx-font-size: 16px; -fx-font-weight: bold;
                       -fx-background-radius: 8; -fx-cursor: hand;
                       -fx-padding: 12 40;
                       -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 6, 0, 0, 3);" />
    </HBox>

</VBox>
