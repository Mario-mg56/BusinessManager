<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="1000.0" spacing="30.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="businessmanager.surface.CompanyCSPController">

   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>

   <!-- Cabecera -->
   <VBox alignment="CENTER" spacing="10" style="-fx-background-color: rgba(255,255,255,0.9);            -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 5);">
      <Label fx:id="labelCompanyName" style="-fx-font-size: 28px;                -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Nombre Empresa" />
      <Label style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;" text="Panel de Gestión" />
   </VBox>

   <VBox alignment="CENTER" spacing="40.0" style="-fx-padding: 30 0 0 0;" VBox.vgrow="ALWAYS">

      <!-- Primera fila de botones -->
      <HBox alignment="CENTER" spacing="40.0">

         <!-- Clientes -->
         <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#goToClients" prefHeight="180.0" prefWidth="250.0" style="-fx-background-radius: 15; -fx-cursor: hand;                         -fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #3498db 0%, #2980b9 100%);                         -fx-text-fill: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.25), 15, 0, 0, 5);                         -fx-border-color: rgba(255,255,255,0.3); -fx-border-width: 2;" text="Clientes">
            <graphic>
               <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                  <image><Image url="@../../imagenes/icon_clientes.png" /></image>
               </ImageView>
            </graphic>
            <font><Font name="System Bold" size="20.0" /></font>
            <tooltip><Tooltip text="Gestionar clientes de la empresa" /></tooltip>
            <padding><Insets bottom="10" top="10" /></padding>
         </Button>

         <!-- Proveedores -->
         <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#goToSupplier" prefHeight="180.0" prefWidth="250.0" style="-fx-background-radius: 15; -fx-cursor: hand;                         -fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #e67e22 0%, #d35400 100%);                         -fx-text-fill: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.25), 15, 0, 0, 5);                         -fx-border-color: rgba(255,255,255,0.3); -fx-border-width: 2;" text="Proveedores">
            <graphic>
               <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                  <image><Image url="@../../imagenes/icon_proveedores.png" /></image>
               </ImageView>
            </graphic>
            <font><Font name="System Bold" size="20.0" /></font>
            <tooltip><Tooltip text="Gestionar proveedores de la empresa" /></tooltip>
            <padding><Insets bottom="10" top="10" /></padding>
         </Button>

      </HBox>

      <!-- Segunda fila -->
      <HBox alignment="CENTER" spacing="40.0">

         <!-- Productos -->
         <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#goToProducts" prefHeight="180.0" prefWidth="250.0" style="-fx-background-radius: 15; -fx-cursor: hand;                         -fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #2ecc71 0%, #27ae60 100%);                         -fx-text-fill: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.25), 15, 0, 0, 5);                         -fx-border-color: rgba(255,255,255,0.3); -fx-border-width: 2;" text="Productos">
            <graphic>
               <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                  <image><Image url="@../../imagenes/icon_productos.png" /></image>
               </ImageView>
            </graphic>
            <font><Font name="System Bold" size="20.0" /></font>
            <tooltip><Tooltip text="Gestionar inventario de productos" /></tooltip>
            <padding><Insets bottom="10" top="10" /></padding>
         </Button>

         <!-- Facturas -->
         <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#goToBills" prefHeight="180.0" prefWidth="250.0" style="-fx-background-radius: 15; -fx-cursor: hand;                         -fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #9b59b6 0%, #8e44ad 100%);                         -fx-text-fill: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.25), 15, 0, 0, 5);                         -fx-border-color: rgba(255,255,255,0.3); -fx-border-width: 2;" text="Facturas">
            <graphic>
               <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                  <image><Image url="@../../imagenes/icon_facturas.png" /></image>
               </ImageView>
            </graphic>
            <font><Font name="System Bold" size="20.0" /></font>
            <tooltip><Tooltip text="Gestionar facturas y documentos" /></tooltip>
            <padding><Insets bottom="10" top="10" /></padding>
         </Button>

      </HBox>

      <!-- Botón Volver -->
      <Button fx:id="buttonBack" mnemonicParsing="false" onAction="#goBack" prefHeight="45" prefWidth="220" style="-fx-background-color: rgba(255,255,255,0.9); -fx-text-fill: #2c3e50;                       -fx-font-size: 16; -fx-font-weight: bold; -fx-background-radius: 10;                       -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 8, 0, 0, 3);                       -fx-border-color: rgba(255,255,255,0.5); -fx-border-width: 2;" text="⬅ Cambiar Empresa">
         <tooltip><Tooltip text="Volver a la selección de empresas" /></tooltip>
      </Button>

   </VBox>

</VBox>
