<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="50.0"
      style="-fx-background-color: #f0f4f8;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="businessmanager.surface.CompanyCSPController">

   <padding>
      <Insets top="40.0" right="40.0" bottom="40.0" left="40.0"/>
   </padding>

   <!-- Nombre de la empresa -->
   <Label fx:id="labelCompanyName" text="Nombre Empresa" textFill="#2c3e50">
      <font>
         <Font name="System Bold" size="36.0"/>
      </font>
   </Label>

   <VBox alignment="CENTER" spacing="30.0" VBox.vgrow="ALWAYS">

      <!-- Primera fila de botones -->
      <HBox alignment="CENTER" spacing="50.0">

         <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#goToClients" prefHeight="150.0" prefWidth="220.0"
                 style="-fx-background-radius: 15; -fx-cursor: hand; -fx-background-color: #3498db; -fx-text-fill: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 5);" text="Clientes">
            <graphic>
               <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../../imagenes/icon_clientes.png"/>
                  </image>
               </ImageView>
            </graphic>
            <font>
               <Font size="18.0"/>
            </font>
         </Button>

         <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#goToSupplier" prefHeight="150.0" prefWidth="220.0"
                 style="-fx-background-radius: 15; -fx-cursor: hand; -fx-background-color: #e67e22; -fx-text-fill: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 5);" text="Proveedores">
            <graphic>
               <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../../imagenes/icon_proveedores.png"/>
                  </image>
               </ImageView>
            </graphic>
            <font>
               <Font size="18.0"/>
            </font>
         </Button>
      </HBox>

      <!-- Segunda fila de botones -->
      <HBox alignment="CENTER">
         <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#goToProducts" prefHeight="150.0" prefWidth="220.0"
                 style="-fx-background-radius: 15; -fx-cursor: hand; -fx-background-color: #2ecc71; -fx-text-fill: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 10, 0, 0, 5);" text="Productos">
            <graphic>
               <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                     <Image url="@../../imagenes/icon_productos.png"/>
                  </image>
               </ImageView>
            </graphic>
            <font>
               <Font size="18.0"/>
            </font>
         </Button>
      </HBox>

      <!-- BotÃ³n Regresar -->
      <Button fx:id="buttonBack" mnemonicParsing="false" onAction="#goBack" text="Regresar"
              style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 16; -fx-background-radius: 10; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 3);"
              prefWidth="150" prefHeight="40"/>
   </VBox>
</VBox>
