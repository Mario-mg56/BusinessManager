<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="650.0" prefWidth="870.0" spacing="20.0"
      style="-fx-background-color: linear-gradient(to bottom, #f8f9fa, #e9ecef);"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="businessmanager.surface.AddEditEntityController">

    <padding>
        <Insets bottom="30" left="40" right="40" top="30" />
    </padding>

    <Label fx:id="labelAddEditEntity" text="Añadir Entidad"
           style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;
                  -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 3, 0, 0, 1);" />

    <GridPane hgap="25" vgap="20" style="-fx-padding: 20;">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" prefWidth="150" />
            <ColumnConstraints prefWidth="300" />
            <ColumnConstraints halignment="RIGHT" prefWidth="150" />
            <ColumnConstraints prefWidth="300" />
        </columnConstraints>

        <!-- Fila 1 -->
        <Label text="NIF:" GridPane.columnIndex="0" GridPane.rowIndex="0"
               style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
        <TextField fx:id="nifField" GridPane.columnIndex="1" GridPane.rowIndex="0"
                   promptText="Ej.: 12345678"
                   style="-fx-background-radius: 8; -fx-border-radius: 8;
                          -fx-border-color: #ced4da; -fx-padding: 10 15;" />

        <Label text="Nombre:" GridPane.columnIndex="2" GridPane.rowIndex="0"
               style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
        <TextField fx:id="nameField" GridPane.columnIndex="3" GridPane.rowIndex="0"
                   promptText="Nombre"
                   style="-fx-background-radius: 8; -fx-border-radius: 8;
                          -fx-border-color: #ced4da; -fx-padding: 10 15;" />

        <!-- Fila 2 -->
        <Label text="Tipo:" GridPane.columnIndex="0" GridPane.rowIndex="1"
               style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
        <ComboBox fx:id="typeCombo" GridPane.columnIndex="1" GridPane.rowIndex="1"
                  promptText="Cliente / Proveedor"
                  style="-fx-background-radius: 8; -fx-border-radius: 8;
                         -fx-border-color: #ced4da; -fx-padding: 10 15;" />

        <Label text="Dirección:" GridPane.columnIndex="2" GridPane.rowIndex="1"
               style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
        <TextField fx:id="addressField" GridPane.columnIndex="3" GridPane.rowIndex="1"
                   promptText="Dirección"
                   style="-fx-background-radius: 8; -fx-border-radius: 8;
                          -fx-border-color: #ced4da; -fx-padding: 10 15;" />

        <!-- Fila 3 -->
        <Label text="Ciudad:" GridPane.columnIndex="0" GridPane.rowIndex="2"
               style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
        <TextField fx:id="cityField" GridPane.columnIndex="1" GridPane.rowIndex="2"
                   promptText="Ciudad"
                   style="-fx-background-radius: 8; -fx-border-radius: 8;
                          -fx-border-color: #ced4da; -fx-padding: 10 15;" />

        <Label text="Provincia:" GridPane.columnIndex="2" GridPane.rowIndex="2"
               style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
        <TextField fx:id="provinceField" GridPane.columnIndex="3" GridPane.rowIndex="2"
                   promptText="Provincia"
                   style="-fx-background-radius: 8; -fx-border-radius: 8;
                          -fx-border-color: #ced4da; -fx-padding: 10 15;" />

        <!-- Fila 4 -->
        <Label text="País:" GridPane.columnIndex="0" GridPane.rowIndex="3"
               style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
        <TextField fx:id="countryField" GridPane.columnIndex="1" GridPane.rowIndex="3"
                   promptText="País"
                   style="-fx-background-radius: 8; -fx-border-radius: 8;
                          -fx-border-color: #ced4da; -fx-padding: 10 15;" />

        <Label text="Código Postal:" GridPane.columnIndex="2" GridPane.rowIndex="3"
               style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
        <TextField fx:id="cpField" GridPane.columnIndex="3" GridPane.rowIndex="3"
                   promptText="Ej.: 28080"
                   style="-fx-background-radius: 8; -fx-border-radius: 8;
                          -fx-border-color: #ced4da; -fx-padding: 10 15;" />

        <!-- Fila 5 -->
        <Label text="Teléfono:" GridPane.columnIndex="0" GridPane.rowIndex="4"
               style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
        <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="4"
                   promptText="Ej.: 600123456"
                   style="-fx-background-radius: 8; -fx-border-radius: 8;
                          -fx-border-color: #ced4da; -fx-padding: 10 15;" />

        <Label text="Email:" GridPane.columnIndex="2" GridPane.rowIndex="4"
               style="-fx-font-weight: bold; -fx-text-fill: #495057;" />
        <TextField fx:id="emailField" GridPane.columnIndex="3" GridPane.rowIndex="4"
                   promptText="correo@ejemplo.com"
                   style="-fx-background-radius: 8; -fx-border-radius: 8;
                          -fx-border-color: #ced4da; -fx-padding: 10 15;" />

        <rowConstraints>
            <RowConstraints prefHeight="50" />
            <RowConstraints prefHeight="50" />
            <RowConstraints prefHeight="50" />
            <RowConstraints prefHeight="50" />
            <RowConstraints prefHeight="50" />
        </rowConstraints>
    </GridPane>

    <HBox alignment="CENTER" spacing="25" style="-fx-padding: 30 0 0 0;">
        <Button onAction="#buttonReturn" text="⬅ Regresar"
                style="-fx-background-color: #6c757d; -fx-text-fill: white;
                       -fx-font-size: 14px; -fx-font-weight: bold;
                       -fx-background-radius: 8; -fx-cursor: hand;
                       -fx-padding: 12 30;" />

        <Button fx:id="buttonClean" onAction="#clean" text="Limpiar Formulario"
                style="-fx-background-color: #ffc107; -fx-text-fill: #212529;
                       -fx-font-size: 14px; -fx-font-weight: bold;
                       -fx-background-radius: 8; -fx-cursor: hand;
                       -fx-padding: 12 30;" />

        <Button fx:id="buttonAddEditEntity" onAction="#buttonAddEditEntity"
                text="Guardar Entidad"
                style="-fx-background-color: #28a745; -fx-text-fill: white;
                       -fx-font-size: 16px; -fx-font-weight: bold;
                       -fx-background-radius: 8; -fx-cursor: hand;
                       -fx-padding: 12 40;" />
    </HBox>

</VBox>
