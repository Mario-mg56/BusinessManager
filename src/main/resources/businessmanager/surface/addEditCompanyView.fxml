<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="533.0" prefWidth="533.0" spacing="25.0" style="-fx-background-color: #f0f4f8;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="businessmanager.surface.AddEditCompanyController">

    <padding>
        <Insets bottom="30" left="40" right="40" top="30" />
    </padding>

    <children>
        <!-- Título -->
        <Label fx:id="labelAddEditCompany" prefHeight="35.0" prefWidth="182.0" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Añadir empresa" />

        <AnchorPane prefHeight="413.0" prefWidth="465.0">
            <children>
                <!-- Formulario -->
                <GridPane hgap="30" layoutX="95.0" layoutY="-5.0" prefHeight="372.0" prefWidth="365.0" vgap="20">
                    <children>
                        <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="NIF:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <TextField fx:id="nifField" prefHeight="26.0" prefWidth="190.0" promptText="Ej: 12345678" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #d0d7de; -fx-padding: 4 8;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Nombre:" GridPane.rowIndex="1" />
                        <TextField fx:id="nameField" prefHeight="26.0" prefWidth="190.0" promptText="Nombre empresa" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #d0d7de; -fx-padding: 4 8;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Dirección:" GridPane.rowIndex="2" />
                        <TextField fx:id="addressField" promptText="Dirección completa" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #d0d7de; -fx-padding: 4 8;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Ciudad:" GridPane.rowIndex="3" />
                        <TextField fx:id="cityField" prefHeight="26.0" prefWidth="181.0" promptText="Ciudad" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #d0d7de; -fx-padding: 4 8;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Provincia:" GridPane.rowIndex="4" />
                        <TextField fx:id="provinceField" promptText="Provincia" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #d0d7de; -fx-padding: 4 8;" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="País:" GridPane.rowIndex="5" />
                        <TextField fx:id="countryField" promptText="País" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #d0d7de; -fx-padding: 4 8;" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                        <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Email:" GridPane.rowIndex="6" />
                        <TextField fx:id="emailField" promptText="correo@ejemplo.com" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #d0d7de; -fx-padding: 4 8;" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                        <Label prefHeight="17.0" prefWidth="102.0" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Domicilio fiscal:" GridPane.rowIndex="7" />
                        <TextField fx:id="taxAddressField" promptText="Domicilio fiscal:" style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #d0d7de; -fx-padding: 4 8;" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                    </children>
                    <columnConstraints>
                        <ColumnConstraints maxWidth="138.0" minWidth="56.0" prefWidth="105.0" />
                        <ColumnConstraints maxWidth="225.0" minWidth="95.0" prefWidth="207.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>

                <!-- Botones -->
                <HBox layoutX="57.0" layoutY="383.0" spacing="30">
                    <children>
                        <Button onAction="#buttonReturn" prefHeight="30.0" prefWidth="154.0" style="-fx-font-size: 14px; -fx-background-color: #d9534f; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 3, 0, 0, 2);" text="Regresar" />

                        <Button fx:id="buttonClean" onAction="#clean" prefHeight="30.0" prefWidth="154.0" style="-fx-font-size: 14px; -fx-background-color: #f0ad4e; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 3, 0, 0, 2);" text="Limpiar" />

                        <Button fx:id="butonAddEditCompany" onAction="#buttonAddCompany" prefHeight="30.0" prefWidth="154.0" style="-fx-font-size: 14px; -fx-background-color: #5cb85c; -fx-text-fill: white; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 3, 0, 0, 2);" text="Añadir empresa" />
                    </children>
                </HBox>

            </children>
        </AnchorPane>
    </children>

</VBox>
