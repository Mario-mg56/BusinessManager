<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="628.0" prefWidth="870.0" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom, #f8f9fa, #e9ecef);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="businessmanager.surface.AddEditCompanyController">

    <padding>
        <Insets bottom="30" left="40" right="40" top="30" />
    </padding>

    <!-- Título dinámico -->
    <Label fx:id="labelAddEditCompany" style="-fx-font-size: 32px; -fx-font-weight: bold;               -fx-text-fill: #2c3e50; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 3, 0, 0, 1);" text="Añadir Empresa">
        <padding>
            <Insets bottom="10" />
        </padding>
    </Label>

    <!-- Formulario en dos columnas -->
    <GridPane hgap="25" style="-fx-padding: 20;" vgap="20">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" prefWidth="150" />
            <ColumnConstraints prefWidth="300" />
            <ColumnConstraints halignment="RIGHT" prefWidth="150" />
            <ColumnConstraints prefWidth="300" />
        </columnConstraints>

        <!-- Fila 1: NIF y Nombre -->
        <Label style="-fx-font-weight: bold; -fx-text-fill: #495057;" text="NIF:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="nifField" promptText="12345678A" style="-fx-background-radius: 8; -fx-border-radius: 8;                          -fx-border-color: #ced4da; -fx-padding: 10 15;                          -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <tooltip>
                <Tooltip text="Número de Identificación Fiscal con letra" />
            </tooltip>
        </TextField>

        <Label style="-fx-font-weight: bold; -fx-text-fill: #495057;" text="Nombre:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
        <TextField fx:id="nameField" promptText="Nombre de la empresa" style="-fx-background-radius: 8; -fx-border-radius: 8;                          -fx-border-color: #ced4da; -fx-padding: 10 15;                          -fx-font-size: 14px;" GridPane.columnIndex="3" GridPane.rowIndex="0" />

        <!-- Fila 2: Dirección y Ciudad -->
        <Label style="-fx-font-weight: bold; -fx-text-fill: #495057;" text="Dirección:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="addressField" promptText="Calle, número" style="-fx-background-radius: 8; -fx-border-radius: 8;                          -fx-border-color: #ced4da; -fx-padding: 10 15;                          -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label style="-fx-font-weight: bold; -fx-text-fill: #495057;" text="Ciudad:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
        <TextField fx:id="cityField" promptText="Ciudad" style="-fx-background-radius: 8; -fx-border-radius: 8;                          -fx-border-color: #ced4da; -fx-padding: 10 15;                          -fx-font-size: 14px;" GridPane.columnIndex="3" GridPane.rowIndex="1" />

        <!-- Fila 3: Provincia y País -->
        <Label style="-fx-font-weight: bold; -fx-text-fill: #495057;" text="Provincia:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="provinceField" promptText="Provincia" style="-fx-background-radius: 8; -fx-border-radius: 8;                          -fx-border-color: #ced4da; -fx-padding: 10 15;                          -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label style="-fx-font-weight: bold; -fx-text-fill: #495057;" text="País:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
        <TextField fx:id="countryField" promptText="País" style="-fx-background-radius: 8; -fx-border-radius: 8;                          -fx-border-color: #ced4da; -fx-padding: 10 15;                          -fx-font-size: 14px;" GridPane.columnIndex="3" GridPane.rowIndex="2" />

        <!-- Fila 4: Código Postal y Teléfono -->
        <Label style="-fx-font-weight: bold; -fx-text-fill: #495057;" text="Código Postal:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="cpField" promptText="28001" style="-fx-background-radius: 8; -fx-border-radius: 8;                          -fx-border-color: #ced4da; -fx-padding: 10 15;                          -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label style="-fx-font-weight: bold; -fx-text-fill: #495057;" text="Teléfono:" GridPane.columnIndex="2" GridPane.rowIndex="3" />
        <TextField fx:id="phoneField" promptText="+34 912 345 678" style="-fx-background-radius: 8; -fx-border-radius: 8;                          -fx-border-color: #ced4da; -fx-padding: 10 15;                          -fx-font-size: 14px;" GridPane.columnIndex="3" GridPane.rowIndex="3" />

        <!-- Fila 5: Email y Domicilio Fiscal -->
        <Label style="-fx-font-weight: bold; -fx-text-fill: #495057;" text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="emailField" promptText="empresa@ejemplo.com" style="-fx-background-radius: 8; -fx-border-radius: 8;                          -fx-border-color: #ced4da; -fx-padding: 10 15;                          -fx-font-size: 14px;" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label style="-fx-font-weight: bold; -fx-text-fill: #495057;" text="Domicilio Fiscal:" GridPane.columnIndex="2" GridPane.rowIndex="4" />
        <TextField fx:id="taxAddressField" promptText="Dirección fiscal" style="-fx-background-radius: 8; -fx-border-radius: 8;                          -fx-border-color: #ced4da; -fx-padding: 10 15;                          -fx-font-size: 14px;" GridPane.columnIndex="3" GridPane.rowIndex="4" />

        <rowConstraints>
            <RowConstraints prefHeight="50" />
            <RowConstraints prefHeight="50" />
            <RowConstraints prefHeight="50" />
            <RowConstraints prefHeight="50" />
            <RowConstraints prefHeight="50" />
        </rowConstraints>
    </GridPane>

    <!-- Panel de botones -->
    <HBox alignment="CENTER" spacing="25" style="-fx-padding: 30 0 0 0;">
        <Button onAction="#buttonReturn" style="-fx-background-color: #6c757d; -fx-text-fill: white;                       -fx-font-size: 14px; -fx-font-weight: bold;                       -fx-background-radius: 8; -fx-cursor: hand;                       -fx-padding: 12 30; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 4, 0, 0, 2);" text="⬅ Regresar">
            <tooltip>
                <Tooltip text="Volver sin guardar cambios" />
            </tooltip>
        </Button>

        <Button fx:id="buttonClean" onAction="#clean" style="-fx-background-color: #ffc107; -fx-text-fill: #212529;                       -fx-font-size: 14px; -fx-font-weight: bold;                       -fx-background-radius: 8; -fx-cursor: hand;                       -fx-padding: 12 30; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.15), 4, 0, 0, 2);" text="Limpiar Formulario">
            <tooltip>
                <Tooltip text="Limpiar todos los campos" />
            </tooltip>
        </Button>

        <Button fx:id="buttonAddEditCompany" onAction="#buttonAddEditCompany" style="-fx-background-color: #28a745; -fx-text-fill: white;                       -fx-font-size: 16px; -fx-font-weight: bold;                       -fx-background-radius: 8; -fx-cursor: hand;                       -fx-padding: 12 40; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 6, 0, 0, 3);" text="Guardar Empresa">
            <tooltip>
                <Tooltip text="Guardar los datos de la empresa" />
            </tooltip>
        </Button>
    </HBox>

</VBox>
